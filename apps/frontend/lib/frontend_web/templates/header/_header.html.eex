<header class="fixed z-50 flex flex-row items-center justify-between w-full h-16 bg-white shadow-md">
  <div class="flex-1 pl-8 text-indigo-900">
    <ul class="flex justify-start menu">
      <%= active_link(@conn, "Browse", class: "item", to: "/browse", active: [{FrontendWeb.ItemLive, :any}, {FrontendWeb.ItemLive.Browse, :any}], class_active: "active", wrap_tag: :li) %>
      <%= active_link(@conn, "Feed", class: "item", to: "/feed", active: [{FrontendWeb.FeedController, :any}], class_active: "active", wrap_tag: :li) %>
      <%= active_link(@conn, "Query", class: "item", to: "/query", active: [{FrontendWeb.QueryController, :any}], class_active: "active", wrap_tag: :li) %>
      <%= active_link(@conn, "Help", class: "item", to: "/help", active: [{FrontendWeb.HelpController, :any}], class_active: "active", wrap_tag: :li) %>
    </ul>
  </div>
  <div class="logo">
    <%= active_link(@conn, to: "/", active: [{FrontendWeb.PageController, :any}], class_active: "text-indigo-600", class_inactive: "text-indigo-900") do %>
